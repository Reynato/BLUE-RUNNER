{
  "name": "task-runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -s generate:* && npm-run-all -p watch:*",
    "generate": "rimraf dist && npm-run-all -s generate:* && npm run min:js",
    "watch:server": "browser-sync start -s dist -w dist/*.html dist/css/*.css dist/js/*.js  --no-ghost-mode",
    "js:babel": "./node_modules/.bin/babel ./app/assets/javascripts --out-dir ./dist/assets/javascripts",
    "js:uglifyjs": "uglifyjs dist/assets/javascripts/application.js -o dist/assets/javascripts/application.js",
    "task:static": "cpx 'app/static/**' dist -C -w",
    "watch:pug": "watch 'npm run generate:pug' ./app/pages/ ./app/layouts/ ./app/components/",
    "watch:sass": "watch 'npm run generate:style' ./app/assets/stylesheets/",
    "watch:js": "watch 'npm run generate:js' ./app/assets/javascripts/",
    "watch:static": "watch 'npm run generate:static' ./app/static/",
    "generate:pug": "pug app/pages/ --hierarchy -o dist/ -P",
    "generate:style": "npm-run-all -s style:*",
    "style:sass": "sass app/assets/stylesheets/:dist/assets/stylesheets/ --style expanded",
    "style:autprefixer": "postcss --use autoprefixer -b 'last 2 versions ie >= 11 Android >= 7 last 3 iOS major versions' dist/assets/stylesheets/application.css -o dist/assets/stylesheets/application.css",
    "generate:js": "npx rollup --config rollup.config.js --format iife --file dist/assets/javascripts/application.min.js",
    "generate:static": "cpx 'app/static/**' dist",
    "generate:basic": "cpx 'app/assets/javascripts/basicAuth.js' dist/assets/javascripts && uglifyjs -c -o ./dist/assets/javascripts/basicAuth.min.js ./dist/assets/javascripts/basicAuth.js",
    "generate:json": "cpx 'app/assets/json/*.json' dist/assets/json/",
    "min:js": "uglifyjs -c -o ./dist/assets/javascripts/application.min.js ./dist/assets/javascripts/application.min.js",
    "start": "npx http-server dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "gsap": "^3.10.4",
    "jstransformer-markdown-it": "^2.1.0",
    "pug-cli": "github:pugjs/pug-cli#master",
    "scrollbooster": "^3.0.2",
    "zingtouch": "^1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.7",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.27.7",
    "cpx": "^1.5.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.49.9",
    "uglify-js": "^3.15.3",
    "watch": "^1.0.2"
  }
}
