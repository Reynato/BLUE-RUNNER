{
  "name": "The task runner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -p watch:*",
    "build": "npm-run-all -p build:*",
    "watch:server": "browser-sync start -s dist -w dist/*.html dist/css/*.css dist/js/*.js",
    "js:babel": "./node_modules/.bin/babel ./app/assets/javascripts --out-dir ./dist/assets/javascripts",
    "js:uglifyjs": "uglifyjs dist/assets/javascripts/application.js -o dist/assets/javascripts/application.js",
    "task:static": "cpx 'app/static/**' dist -C -w",
    "watch:pug": "watch 'npm run build:pug' ./app/pages/ ./app/layouts/ ./app/components/",
    "watch:sass": "watch 'npm run build:sass' ./app/assets/stylesheets/",
    "watch:js": "watch 'npm run build:js' ./app/assets/javascripts/",
    "watch:static": "watch 'npm run build:static' ./app/static/",
    "build:pug": "pug app/pages/ --hierarchy -o dist/ -P",
    "build:sass": "sass app/assets/stylesheets/:dist/assets/stylesheets/ --no-source-map",
    "build:js": "npm-run-all -s js:*",
    "build:static": "cpx 'app/static/**' dist -C",
    "build:imagemin": "node app/plugins/imagemin.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pug-cli": "github:pugjs/pug-cli#master",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "browser-sync": "^2.27.7",
    "cpx": "^1.5.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "uglify-js": "^3.15.3",
    "watch": "^1.0.2"
  }
}
